<%= form_for @propose, :html => { :class => 'form-horizontal' } do |f| %>

<div class="page-header">
  <h1>Оренда приватної нерухомості - Пропозиція</h1>
</div>

<dl class="dl-horizontal">

  <dt><strong>Район:</strong></dt>
  <dd><%= @propose.District %></dd>
  <dd><%= f.select :District, raw ("<option> </option><option>Галицький</option><option>Личаківський</option><option>Сихівський</option><option>Шевченківський</option><option>Залізничний</option><option>Франківський</option><option>Область</option>"), :class=> "span2"%></dd>

  <dt><strong>Адреса:</strong></dt>
  <dd><%= @propose.Address %></dd>
  <dd><%= f.text_field :Address, :class => 'text_field' %></dd>
  <dd></dd>

  <dt><strong>Ціна:</strong></dt>
  <dd><%= @propose.Price %></dd>
  <dd><%= f.text_field :Price, :class => 'text_field' %></dd>


  <dt><strong>Кількість кімнат:</strong></dt>
  <dd><%= @propose.Count_of_rooms %></dd>
  <dd><%= select_tag "search3",raw ("<option>Не вказано</option><option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option>"), :class=>'span1'%></dd>


  <dt><strong>Поверх:</strong></dt>
  <dd><%= @propose.Stage %></dd>
  <dd><%= select_tag "search4",raw ("<option>Не вказано</option><option>1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option><option>11</option><option>12</option><option>13</option><option>14</option><option>15</option><option>16</option><option>17</option><option>18</option><option>19</option><option>20</option>"), :class=>'span1'%></dd>


  <dt><strong>Будівля:</strong></dt>
  <dd><%= @propose.House %></dd>
  <dd><%= select_tag "search5", raw ("<option>Не вказано</option><option>Цегла</option><option>Панель</option><option>Новобудова</option><option>Особняк</option><option>1/2 особняка</option><option>Особн. типу</option><option>Хрущівка</option><option>Австрійський</option><option>Польський</option><option>Старий Львів</option><option>0 цикл</option>"), :class=> "span1"%></dd>


  <dt><strong>Опалення:</strong></dt>
  <dd><%= @propose.heating %></dd>
  <dd><%= select_tag "search6", raw ("<option>Не вказано</option><option>Центральне</option><option>Будинкове</option><option>Індивідуальне</option><option>Конвекторне</option><option>Електричне</option><option>Без опалення</option>"), :class=> "span1"%></dd>


  <dt><strong>Умеблювання:</strong></dt>
  <dd><%= @propose.furniture %></dd>
  <dd><%= select_tag "search7", raw ("<option>Не вказано</option><option>Нові</option><option>Сучасні</option><option>Дорогі</option><option>90-х років</option><option>Радянські</option><option>Частково</option><option>Мішані</option><option>Без меблів</option><option>Офісні</option><option>Класичні</option>"), :class=> "span1"%></dd>


  <dt><strong>Стан:</strong></dt>
  <dd><%= @propose.condition %></dd>
  <dd><%= select_tag "search8", raw ("<option>Не вказано</option><option>Євроремонт</option><option>Під євро</option><option>Санітарний</option><option>Радянський</option><option>Житловий стан</option><option>Без ремонту</option><option>Нульовий цикл</option>"), :class=> "span1"%></dd>


  <dt><strong>Власник:</strong></dt>
  <dd><%= @propose.Owner_name %></dd>
  <dd><%= f.text_field :Owner_name, :class => 'text_field' %></dd>


  <dt><strong>Контакти власника:</strong></dt>
  <dd><%= @propose.owner_phone %></dd>
  <dd><%= f.label :Контакти_власника, :class => 'control-label' %></dd>


  <dt><strong>Дата:</strong></dt>
  <dd><%= @propose.Last_date.to_date %></dd>
  <dd><%= f.date_select :Last_date, :class => 'date_select' %></dd>
</dl>
 <div class="form-actions">
    <%= f.submit :Оновити, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("Відмінити")),
                proposes_path, :class => 'btn' %>
  </div>
<% end %>
