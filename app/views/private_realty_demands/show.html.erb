<%- model_class = PrivateRealtyDemand -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:District) %>:</strong></dt>
  <dd><%= @private_realty_demand.District %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Street) %>:</strong></dt>
  <dd><%= @private_realty_demand.Street %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Price) %>:</strong></dt>
  <dd><%= @private_realty_demand.Price %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Count_of_rooms) %>:</strong></dt>
  <dd><%= @private_realty_demand.Count_of_rooms %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Condition) %>:</strong></dt>
  <dd><%= @private_realty_demand.Condition %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Square) %>:</strong></dt>
  <dd><%= @private_realty_demand.Square %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Type) %>:</strong></dt>
  <dd><%= @private_realty_demand.Type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Heating) %>:</strong></dt>
  <dd><%= @private_realty_demand.Heating %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Contacts) %>:</strong></dt>
  <dd><%= @private_realty_demand.Contacts %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Buyer) %>:</strong></dt>
  <dd><%= @private_realty_demand.Buyer %></dd>
  <dt><strong><%= model_class.human_attribute_name(:Other) %>:</strong></dt>
  <dd><%= @private_realty_demand.Other %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              private_realty_demands_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_private_realty_demand_path(@private_realty_demand), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              private_realty_demand_path(@private_realty_demand),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
